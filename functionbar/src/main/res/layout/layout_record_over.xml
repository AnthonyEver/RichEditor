<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_record_over"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--播放录音时间-->
    <LinearLayout
        android:id="@+id/ll_record_over_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_record_over_begintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#009fe8"
            android:textSize="48px" />

        <TextView
            android:id="@+id/tv_record_over_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/05:00"
            android:textColor="#009fe8"
            android:textSize="28px" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_record_over_play"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_below="@+id/ll_record_over_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:background="@mipmap/play_normal" />

    <Button
        android:id="@+id/btn_record_over_pause"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_below="@+id/ll_record_over_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80px"
        android:background="@mipmap/play_pause_normal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="50px"
            android:background="#f6f6f6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_record_over_again"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重录"
                android:textColor="#009fe8"
                android:textSize="34px" />

            <View
                android:id="@+id/v_record_over_line"
                android:layout_width="2px"
                android:layout_height="80px"
                android:background="#f6f6f6" />

            <TextView
                android:id="@+id/tv_record_over_save"
                android:layout_width="0px"
                android:layout_height="80px"
                android:layout_weight="1"
                android:gravity="center"
                android:text="保存"
                android:textColor="#009fe8"
                android:textSize="34px" />

        </LinearLayout>
    </LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>