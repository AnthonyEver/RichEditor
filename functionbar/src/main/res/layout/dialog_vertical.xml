<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="301px"
    android:background="@drawable/shape_dialog_common"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dialog_action1"
        android:layout_width="match_parent"
        android:layout_height="150px">

        <TextView
            android:id="@+id/tv_dialog_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="59px"
            android:text="评论"
            android:textColor="@color/colorBlack1"
            android:textSize="38px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerVertical="true"
        android:background="@color/colorGray6" />


    <RelativeLayout
        android:id="@+id/rl_dialog_action2"
        android:layout_width="match_parent"
        android:layout_height="150px">

        <TextView
            android:id="@+id/tv_dialog_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="59px"
            android:text="删除"
            android:textColor="@color/colorBlack1"
            android:textSize="38px" />

    </RelativeLayout>
</LinearLayout>