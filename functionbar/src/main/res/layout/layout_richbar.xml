<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom_function"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/colorWhite3"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/button_emoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/background_selector_face" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/background_selector_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/background_selector_voice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/background_selector_video" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/background_selector_keyboard" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>