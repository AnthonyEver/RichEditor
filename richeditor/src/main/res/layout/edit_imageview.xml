<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.app.richeditor.editor.DataImageView
        android:id="@+id/edit_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/image_play"
            android:layout_width="132px"
            android:layout_height="132px"
            android:layout_centerInParent="true"
            android:background="@drawable/background_selector_video_play"
            android:scaleType="fitXY"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33px"
            android:text="00:00"
            android:textSize="30px"
            android:textColor="@color/colorWhite1"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:background="@drawable/drawable_veto_option_delete_selector" />

</RelativeLayout>

